node BTSlave
  sub
    Move : MovingSlave; 
  state
    obey : [0,3] : public;
  event
    obeyStop, obeyLeft, obeyRight, obeyFw;
  trans
    true |- obeyStop -> obey := 0;
    true |- obeyLeft -> obey := 1;
    true |- obeyFw -> obey := 2;
    true |- obeyRight -> obey := 3;
  sync
    <obeyStop, Move.stop>;
    <obeyLeft, Move.left>;
    <obeyFw, Move.forward>;
    <obeyRight, Move.right>;
  init
    obey := 0;
edon
