node BTSlave
  sub
    Move : Moving; 
  state
    obey : [-1,3] : public;
  event
    obeyBack, obeyStop, obeyLeft, obeyRight, obeyFw;
  trans
    true |- obeyBack -> obey := -1;
    true |- obeyStop -> obey := 0;
    true |- obeyLeft -> obey := 1;
    true |- obeyFw -> obey := 2;
    true |- obeyRight -> obey := 3;
  sync
    <obeyBack, Move.back>;
    <obeyStop, Move.stop>;
    <obeyLeft, Move.left>;
    <obeyFw, Move.forward>;
    <obeyRight, Move.right>;
  init
    obey := 0;
edon
